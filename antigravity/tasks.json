{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript: Type Check (Client)",
      "type": "shell",
      "command": "tsc",
      "args": ["--noEmit"],
      "options": {
        "cwd": "${workspaceFolder}/client"
